<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/snack"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/snackInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/calSnack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/snack"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/icSnack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:visibility="visible"/>
            </LinearLayout>

        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            card_view:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listSnack"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="@android:color/transparent"/>

                <LinearLayout
                    android:id="@+id/txtItemSnack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="16sp"
                        android:paddingRight="16sp"
                        android:text="@string/no_items_added"
                        android:textColor="@color/text_color"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">


                    <TextView
                        android:id="@+id/txtQuickAddSnack"
                        style="?android:buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/suggestion"
                        android:clickable="true"
                        android:gravity="center"
                        android:minHeight="32dp"
                        android:minWidth="88dp"
                        android:text="@string/quick_add"
                        android:textColor="@color/accent"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/suggestion"
                        style="?android:buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:minHeight="32dp"
                        android:minWidth="88dp"
                        android:text="@string/suggestion"
                        android:textColor="@color/accent"
                        android:textSize="14sp"/>
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/breakfast"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold"/>


            <LinearLayout
                android:id="@+id/breakfastInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/calBreakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/breakfast"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/icBreakfast"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:visibility="visible"/>
            </LinearLayout>

        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            card_view:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listBreakfast"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="@android:color/transparent"/>

                <LinearLayout
                    android:id="@+id/txtItemBreakfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="16sp"
                        android:paddingRight="16sp"
                        android:text="@string/no_items_added"
                        android:textColor="@color/text_color"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">


                    <TextView
                        android:id="@+id/txtQuickAddBreakfast"
                        style="?android:buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/suggestion1"
                        android:clickable="true"
                        android:gravity="center"
                        android:minHeight="32dp"
                        android:minWidth="88dp"
                        android:text="@string/quick_add"
                        android:textColor="@color/accent"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/suggestion1"
                        style="?android:buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:minHeight="32dp"
                        android:minWidth="88dp"
                        android:text="@string/suggestion"
                        android:textColor="@color/accent"
                        android:textSize="14sp"/>
                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/Lunch"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/lunchInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/calLunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/Lunch"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/icLunch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:visibility="visible"/>
            </LinearLayout>


        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            card_view:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listLunch"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="@android:color/transparent"/>

                <LinearLayout
                    android:id="@+id/txtItemLunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="16sp"
                        android:paddingRight="16sp"
                        android:text="@string/no_items_added"
                        android:textColor="@color/text_color"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">


                    <TextView
                        android:id="@+id/txtQuickAddLunch"
                        style="?android:buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/suggestion2"
                        android:clickable="true"
                        android:gravity="center"
                        android:minHeight="32dp"
                        android:minWidth="88dp"
                        android:text="@string/quick_add"
                        android:textColor="@color/accent"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/suggestion2"
                        style="?android:buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:minHeight="32dp"
                        android:minWidth="88dp"
                        android:text="@string/suggestion"
                        android:textColor="@color/accent"
                        android:textSize="14sp"/>
                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/dinner"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold"/>


            <LinearLayout
                android:id="@+id/dinnerInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/calDinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/dinner"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/icDinner"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:visibility="visible"/>
            </LinearLayout>


        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            card_view:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listDinner"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="@android:color/transparent"/>


                <LinearLayout
                    android:id="@+id/txtItemDinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="16sp"
                        android:paddingRight="16sp"
                        android:text="@string/no_items_added"
                        android:textColor="@color/text_color"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">


                    <TextView
                        android:id="@+id/txtQuickAddDinner"
                        style="?android:buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/suggestion3"
                        android:clickable="true"
                        android:gravity="center"
                        android:minHeight="32dp"
                        android:minWidth="88dp"
                        android:text="@string/quick_add"
                        android:textColor="@color/accent"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/suggestion3"
                        style="?android:buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:minHeight="32dp"
                        android:minWidth="88dp"
                        android:text="@string/suggestion"
                        android:textColor="@color/accent"
                        android:textSize="14sp"/>
                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- fitbit -->
        <LinearLayout
            android:id="@+id/llFitBit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9dp"
                    android:adjustViewBounds="true"
                    android:padding="8dp"
                    android:src="@drawable/fitbit_logo_dark_1000px"
                    android:visibility="visible"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal">


                    <ProgressBar
                        android:id="@+id/pbLoad"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:indeterminate="true"
                        android:max="100"
                        android:padding="8dp"
                        android:progress="75"
                        android:secondaryProgress="100"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/fbRefresh"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_gravity="center_vertical"
                        android:padding="8dp"
                        android:src="@mipmap/ic_refresh"
                        android:tint="@color/text_color"
                        android:visibility="visible"/>
                </LinearLayout>

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="Burned"
                            android:textColor="@color/text_color"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/fbCaloriesBurned"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:gravity="center_vertical|end"
                            android:paddingLeft="16sp"
                            android:paddingRight="16sp"
                            android:text="100"
                            android:textColor="@color/text_color"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eeeeee"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="Calorie Goal + Burned"
                            android:textColor="@color/text_color"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/fbCaloriesNew"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:gravity="center_vertical|end"
                            android:paddingLeft="16sp"
                            android:paddingRight="16sp"
                            android:text="100"
                            android:textColor="@color/text_color"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eeeeee"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/fbCaloriesConsumed"
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:layout_marginLeft="16dp"
                                android:gravity="center_vertical"
                                android:text="Consumed"
                                android:textColor="@color/text_color"
                                android:textSize="16sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=" consumed"
                                android:textColor="@color/text_color"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/fbCaloriesGoalNew"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|end"
                                android:paddingLeft="16sp"
                                android:paddingRight="16sp"
                                android:text="100"
                                android:textColor="@color/text_color"
                                android:textSize="16sp"/>


                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progressFitbit"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_gravity="center_vertical"
                            android:progressDrawable="@drawable/progress_bar"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
    </LinearLayout>
</ScrollView>