            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/update_serving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbarTitle"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:singleLine="true"
                        android:text="@string/serving_size"
                        android:textSize="16sp"/>

                    <Spinner
                        android:id="@+id/spnServings"
                        android:layout_width="130dp"
                        android:layout_height="48dp"
                        android:layout_marginRight="16dp"
                        android:spinnerMode="dialog"/>

                    <TextView
                        android:id="@+id/viewSevingSize"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="@string/serving_size"
                        android:textSize="16sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"/>

                <LinearLayout
                    android:id="@+id/changeServing"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Servings Consumed"
                        android:textColor="@color/text_color"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/servingg"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textColor="@color/text_color"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical|right|end"
                        android:layout_marginRight="16dp"
                        android:src="@mipmap/ic_chevron_right"
                        android:tint="@color/text_color"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/titles_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_serving"
                android:paddingBottom="8dp"
                android:paddingTop="12dp">

                <TextView
