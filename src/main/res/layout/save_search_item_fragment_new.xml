                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/light_grey"/>

                        <TextView
                            android:id="@+id/ironUpdate"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:textColor="@color/text_color"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stat"
                android:layout_marginRight="16dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:text="@string/meal_progress"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/c"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="24dp"
                        android:paddingRight="16dp"
                        android:text="@string/calories"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"/>

                    <ProgressBar
                        android:id="@+id/pbCal"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/c"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/progress_add_final"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/f"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="24dp"
                        android:paddingRight="16dp"
                        android:text="@string/fat"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"/>

                    <ProgressBar
                        android:id="@+id/pbFat"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/f"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/progress_add_final"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ca"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="24dp"
                        android:paddingRight="16dp"
                        android:text="@string/carbs"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"/>

                    <ProgressBar
                        android:id="@+id/pbCarb"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ca"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/progress_add_final"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/p"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="24dp"
                        android:paddingRight="16dp"
                        android:text="@string/protein"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"/>

                    <ProgressBar
                        android:id="@+id/pbPro"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/p"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/progress_add_final"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="*Consumed"
                    android:textColor="@color/accent"
                    android:textSize="10dp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/progressMeal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:singleLine="true"
                    android:text="*This Meal"
                    android:textColor="@color/primary"
                    android:textSize="10dp"
                    android:textStyle="italic"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="*Remainder"
                    android:textColor="@color/light_grey"
                    android:textSize="10dp"
                    android:textStyle="italic"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@+id/update_serving"
                android:background="@drawable/toolbar_shadow"/>
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>