<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_manual"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/accent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:paddingLeft="16dp">

            <com.eugene.fithealthmaingit.Custom.TextViewFont
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:fontName="Roboto-Medium.ttf"/>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_manual">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.61"
                    android:text="Per 1 Serving"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/servingName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:hint="Serving Name e.g. oz"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:selectAllOnFocus="true"
                    android:text="Serving"
                    android:textSize="14sp"
                    app:backgroundTint="@color/accent"
                    app:floatingLabel="highlight"/>
            </LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mealName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/meal_name"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:backgroundTint="@color/accent"
                app:floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mealBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Food Brand"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:backgroundTint="@color/accent"
                app:floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mealCalories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/calories"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:backgroundTint="@color/accent"
                app:floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mealFat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fat"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textSize="14sp"
                app:backgroundTint="@color/accent"
                app:floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mealCarbs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Carbohydrates"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:backgroundTint="@color/accent"
                app:floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mealProtein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Protein"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:backgroundTint="@color/accent"
                app:floatingLabel="highlight"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="Optional"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mealSatFat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Saturated Fat"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:backgroundTint="@color/accent"
                app:floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mealCholesterol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cholesterol"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:backgroundTint="@color/accent"
                app:floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mealSodium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sodium"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:backgroundTint="@color/accent"
                app:floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mealFiber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fiber"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:backgroundTint="@color/accent"
                app:floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mealSugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sugars"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:backgroundTint="@color/accent"
                app:floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mealA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vitamin A"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:backgroundTint="@color/accent"
                app:floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mealC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vitamin C"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:backgroundTint="@color/accent"
                app:floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mealCalcium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Calcium"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:backgroundTint="@color/accent"
                app:floatingLabel="highlight"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mealIron"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Iron"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                app:backgroundTint="@color/accent"
                app:floatingLabel="highlight"/>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/toolbar_manual"
        android:background="@drawable/toolbar_shadow"/>

</RelativeLayout>
